{
  "dependencies": {
    "@fortawesome/fontawesome-free": "6.5.1",
    "bootstrap": "5.3.3"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.0",
    "npm-run-all2": "^6.1.2",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "rtlcss": "^4.1.1",
    "sass": "1.71.1"
  },
  "scripts": {
    "admin-css": "npm-run-all admin-compile admin-css-prefix admin-css-rtl",
    "admin-css-prefix": "postcss --config build/postcss.config.mjs --replace \"src/themes/admin_future/css/*.css\" \"!src/themes/admin_future/css/*.rtl*.css\" \"!src/themes/admin_future/css/*.min.css\"",
    "admin-css-rtl": "cross-env NODE_ENV=RTL postcss --config build/postcss.config.mjs --dir \"src/themes/admin_future/css\" --ext \".rtl.css\" \"src/themes/admin_future/css/*.css\" \"!src/themes/admin_future/css/*.rtl*.css\" \"!src/themes/admin_future/css/*.min.css\"",
    "admin-compile": "sass --style expanded --source-map --embed-sources scss/admin_future/:src/themes/admin_future/css/",
    "watch-admin-css": "nodemon --watch scss/ --ext scss --exec \"npm-run-all admin-compile admin-css-prefix admin-css-rtl\"",
    "watch-admin": "npm-run-all --parallel watch-admin-*",

    "site-css": "npm-run-all site-compile site-css-prefix site-css-rtl",
    "site-css-prefix": "postcss --config build/postcss.config.mjs --replace \"src/themes/future/css/*.css\" \"!src/themes/future/css/*.rtl*.css\" \"!src/themes/future/css/*.min.css\"",
    "site-css-rtl": "cross-env NODE_ENV=RTL postcss --config build/postcss.config.mjs --dir \"src/themes/future/css\" --ext \".rtl.css\" \"src/themes/future/css/*.css\" \"!src/themes/future/css/*.rtl*.css\" \"!src/themes/future/css/*.min.css\"",
    "site-compile": "sass --style expanded --source-map --embed-sources scss/future/:src/themes/future/css/",
    "watch-site-css": "nodemon --watch scss/ --ext scss --exec \"npm-run-all site-compile site-css-prefix site-css-rtl\"",
    "watch-site": "npm-run-all --parallel watch-site-*"
  }
}
